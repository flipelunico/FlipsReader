<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffdadad8"
    android:minHeight="80dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/item_icono"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_icono"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="3dp"
            android:singleLine="true"
            android:text="12:40 · Engadget en español"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/item_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:text="Crean un disco duro de 500 terabits por pulgada"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/item_contenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="3dp"
            android:lines="2"
            android:text="Investigadores holandeses han dado con una solucion de almacenamiento microscopico que es cre"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="false"/>

    </LinearLayout>

</RelativeLayout>