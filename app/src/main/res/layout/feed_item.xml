<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffdadad8"
    android:minHeight="80dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_favicon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="false"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/item_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="3dp"
            android:paddingLeft="10dp"
            android:text="Engadget en español"
            android:textIsSelectable="false"
            android:textStyle="normal|italic"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/item_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="3dp"
            android:text=" · 12:40"
            android:textIsSelectable="false"
            android:textStyle="normal|italic"
            android:textColor="@android:color/darker_gray" />


        </LinearLayout>
        <TextView
            android:id="@+id/item_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:text="Crean un disco duro de 500 terabits por pulgada"
            android:textIsSelectable="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_contenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="3dp"
            android:lines="2"
            android:text="Investigadores holandeses han dado con una solucion de almacenamiento microscopico que es cre"
            android:textIsSelectable="false"/>

    </LinearLayout>

</RelativeLayout>